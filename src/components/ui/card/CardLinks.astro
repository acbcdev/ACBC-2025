---
import GithubSvg from "@/svg/github.svg";
import LinkSvg from "@/svg/link.svg";

type Props = {
  link?: string;
  github: string;
};

const { link, github } = Astro.props;
---

<div
  class="flex gap-x-2 bg-background/30 backdrop-blur-md p-2 rounded-full
  scale-90 opacity-0 group-hover/card:opacity-100 group-hover/card:scale-100
  transition-all duration-300
  hover:bg-background/40"
>
  <a
    href={github}
    target="_blank"
    class="opacity-70 hover:opacity-100 duration-150"
    rel="noopener noreferrer"
    title="View GitHub repository"
  >
    <GithubSvg class="size-5" />
  </a>
  {
    link && (
      <a
        href={link}
        target="_blank"
        class="opacity-70 hover:opacity-100 duration-150"
        rel="noopener noreferrer"
        title="Visit live site"
      >
        <LinkSvg class="size-5" />
      </a>
    )
  }
</div>
