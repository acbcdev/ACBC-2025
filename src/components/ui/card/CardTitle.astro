---
interface Props {
  name: string;
  link: string;
  favicon?: string;
}
const { name, link, favicon } = Astro.props;
---

<header class="p-2 rounded-lg inline-block">
  <a href={link} target="_blank" class="flex items-center gap-x-2 group/title">
    {favicon && <img src={favicon} class="size-8" alt={`${link} favicon`} />}
    <h2 class="text-2xl font-bold group-hover/title:underline text-foreground">
      {name}
    </h2>
  </a>
</header>
