---
interface Props {
  name: string;
  link?: string;
  favicon?: string;
}
const { name, link, favicon } = Astro.props;
const Comp = link ? "a" : "span";
---

<header class="p-2 rounded-lg inline-block">
  <Comp
    href={link}
    target="_blank"
    class="flex items-center gap-x-2 group/title"
  >
    {favicon && <img src={favicon} class="size-8" alt={`${link} favicon`} />}
    <h2
      class={`text-2xl  font-bold ${link ? "group-hover/title:underline" : ""} text-foreground`}
    >
      {name}
    </h2>
  </Comp>
</header>
