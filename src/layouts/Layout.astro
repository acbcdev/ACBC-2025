---
import SEO from "@/components/SEO.astro";
import "@/styles/globals.css";
type Props = {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
};
const { title, description, image = "/img/og.webp", canonical } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO
      title={title}
      description={description}
      image={image}
      canonical={canonical}
    />
  </head>
  <body class="w-[100%] md:w-[60%] mx-auto grid place-content-center">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
  html,
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
